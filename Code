#include <iostream>
#include <cmath>
#include <string>
#include <fstream>
#include <Windows.h>

using namespace std;

// База данных фраз
const int quantity_script = 2;
const int quantity_action = 6;
string input_options[quantity_script][quantity_action] = {
	{"hi","helloy", "watsap, bro", "hey", "ohayo"},
	{"как дела?", "бро, как ты?",  "аой"}
};


// Функция для нахождения номера сценарий по фразе пользователя
int Identify(string user_answer)
{
	for (int i = 0; i < user_answer.size(); i++)
	{
		user_answer[i] = tolower(user_answer[i]);
	}
	int sup = -1;
	for (int i = 0; i < quantity_script; i++)
	{
		for (int j = 0; j < quantity_action; j++)
		{

			if ( user_answer.compare(input_options[i][j]) == 0)
			{
				sup = i;
			}
		}
	}
	return sup;
}

void Greeting()
{
	cout << "Охаё, ёмаё, круто" << endl;
}

// Функция для распределения сценариев по своим функциям
void Action(int action_number)
{
		switch (action_number)
		{
		case (0):
			break;
		case (1): Greeting();
			break;
		case (2):
			break;
		default: cout << "Ты быканул или мне показалось?!" << endl;
			cout << "А ну повтори в более вежливой форме!" << endl;
			break;
		}
}


// Главное тело программы
int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	setlocale(LC_ALL, "rus");
	string user_responce = " ";
	while (user_responce != "Stop")
	{
		getline(cin, user_responce);
		Action(Identify(user_responce));
	}
	return 0;
}
